<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-10 offset-3"><h3>Listing Details:</h3> </div>
    <div class="card col-12 offset-3" style="width: 50rem;">
        <br />
            <img src="<%= listing.image %>" class="card-img-top show-img" style="height: 50vh;" alt="...">
            <div class="card-body">
              <p class="card-text">
                <br />
                <b><%= listing.title %></b> <br />
                <%= listing.description %> <br />
                &#8377; <%= listing.price.toLocaleString("en-IN") %>/night <br />
                <%= listing.location %> <br />
                <%= listing.country %> <br />
             </p>
            </div>
          </div>
   
    
        
        
    </div>
     <br />
    <div class="col-2 offset-3 btndiv mt-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark btns">Edit </a>
    <br /> <br />
    <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE">
        <button class="btn btn-dark btns">Delete</button>
    </form>
    </div>

           
    </div>
</body>
</html>